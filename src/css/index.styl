html,
body {
    font: 14px/1.4 'Montserrat', sans-serif;
}

body {
    background: #232323;
}

.content {
    max-width: 1200px;
    padding: 2rem;
    margin: 0 auto;
}

.mainNav {
    font-size: 16px;
    line-height: 1;
    font-weight: 700;
    display: flex;
    align-items: center;

    a {
        padding: 1rem 40% 1rem 0;
        color: #e6a375;
        text-decoration: none;

        &:visited,
        &:hover,
        &:active {
            color: #e6a375;
        }
    }    
}

.buttonWhite {
    background: rgba(255, 255, 255, 0.5);
    display: inline-block;
    padding: 1.2em 2em;
    border: none;
    border-radius: 10px;
    font: 700 16px/1em 'Montserrat', sans-serif;
}

.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;    
}

.parallax {
    position: relative;
    width: 100%;
    padding-bottom: 141%; 

    img{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
    }   
}
